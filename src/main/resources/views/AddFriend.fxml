<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="190.0" prefWidth="238.0" spacing="10" stylesheets="@../css/GlobalStyles.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.dsassignment3_4.controllers.AddFriendController">
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" styleClass="label-white" text="Add Friend" />
    <TextField fx:id="searchUserField" promptText="Enter Username to Add" />
    <Button onAction="#handleAddFriend" text="Send Friend Request">
      <graphic>
         <FontAwesomeIcon fill="WHITE" glyphName="MAIL_FORWARD" size="1.4EM" />
      </graphic></Button>
   <Button layoutX="32.0" layoutY="128.0" onAction="#handleFriendRequests" text="View Friend Requests">
      <graphic>
         <FontAwesomeIcon fill="WHITE" glyphName="ANGLE_DOUBLE_DOWN" size="1.8EM" />
      </graphic></Button>
</VBox>
